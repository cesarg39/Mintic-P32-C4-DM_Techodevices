<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemCommentsUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="Usuario"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/ItemCommentsUser"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemCommentsScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="5/5"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/ItemCommentsScore" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/defaultLayoutMargin">

            <TextView
                android:id="@+id/ItemCommentsComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quisque id diam vel quam elementum pulvinar etiam non quam."
                android:textSize="@dimen/itemCommentsComment"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>