<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation"
    android:layout_margin="@dimen/defaultLayoutMargin"
    android:id="@+id/card_view_product">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/im_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightImageProduct"
            android:scaleType="fitCenter"
            tools:src="@drawable/product_example_image"
            android:layout_margin="@dimen/defaultLayoutMargin"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Producto"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sizeNameProduct"
            android:textColor="@color/primaryTextColor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $ "
                android:gravity="center_horizontal"
                android:textSize="@dimen/sizePriceProduct"
                android:textColor="@color/primaryTextColor"/>
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="999.999"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sizePriceProduct"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>